doctype html
html
  head
    meta(charset="utf8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title #{title}
    link(rel="stylesheet", href="https://unpkg.com/@picocss/pico@2/css/pico.min.css")
    link(rel="stylesheet", href="/css/style.css")
    block head
  body
    // Only show the header/nav when showNav is not explicitly set to false
    if showNav !== false
      header.container
        nav
          ul
            if currentUser
              li: a(href="/dashboard") My Account
              li: a(href="/cart") Cart
              li: a(href="/store") Store
              li: a(href="/about") About
            else
              li: a(href="/about") About

          ul
            if currentUser
              li: span Hello, #{currentUser.username}
              li
                form(method="POST", action="/logout")
                  button(type="submit" class="secondary") Logout
            else
              li: a(href="/login") Login
              li: a(href="/register") Register

    main.container
      include partials/messages
      block content

    footer.container.footer
      small FOOTER: GatorTrade &copy; 2005 All rights reserved. This is a fictional website created for educational purposes only.
